<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dip">

    <!--  First name Label -->
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dip">
        <TextView android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_first_name"/>
        <EditText android:id="@+id/firstNameView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="20dip"
            android:singleLine="true"/>
    </LinearLayout>

    <!--  Last name Label -->
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dip">
        <TextView android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_last_name"/>
        <EditText android:id="@+id/lastNameView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="20dip"
            android:singleLine="true"/>
    </LinearLayout>

    <!--  Bday Label -->
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dip">
        <TextView android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_bday"/>
        <EditText android:id="@+id/bdayView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="20dip"
            android:singleLine="true"/>
    </LinearLayout>

    <!-- Login button -->
    <Button android:id="@+id/loginBtn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:text="@string/title_login"/>

</LinearLayout>