<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dip">

    <!--  First name Label -->
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dip">
        <TextView android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_first_name"
            android:paddingRight="10dip"/>
        <TextView android:id="@+id/firstNameLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!--  Last name Label -->
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dip">
        <TextView android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_last_name"
            android:paddingRight="10dip"/>
        <TextView android:id="@+id/lastNameLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!--  Bday Label -->
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dip">
        <TextView android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_bday"
            android:paddingRight="10dip"/>
        <TextView android:id="@+id/bdayLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>